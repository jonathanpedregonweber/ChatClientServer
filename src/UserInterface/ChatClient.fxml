<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<GridPane fx:controller="UserInterface.ChatClientController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label GridPane.rowIndex="0" GridPane.columnIndex="0" text="Enter an IP Address"/>
    <TextArea GridPane.rowIndex="0" GridPane.columnIndex="1" fx:id="ipTextArea" maxHeight="30"/>
    <Button GridPane.rowIndex="0" GridPane.columnIndex="2" text="Submit IP" onAction="#submitIp"/>

    <Label GridPane.rowIndex="1" GridPane.columnIndex="0" text="Enter Message"/>
    <TextArea GridPane.rowIndex="1" GridPane.columnIndex="1" fx:id="messageTextArea" maxHeight="400"/>
    <Button GridPane.rowIndex="1" GridPane.columnIndex="2" text="Send Message" onAction="#SendMessage"/>
</GridPane>